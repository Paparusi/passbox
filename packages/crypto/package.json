{
  "name": "@pabox/crypto",
  "version": "0.1.0",
  "description": "Zero-knowledge E2E encryption library for PassBox. Argon2id + AES-256-GCM + X25519.",
  "type": "module",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "encryption",
    "zero-knowledge",
    "aes-256-gcm",
    "argon2id",
    "x25519",
    "e2e",
    "cryptography"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Paparusi/passbox",
    "directory": "packages/crypto"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@noble/ciphers": "^1.2.0",
    "@noble/curves": "^1.8.0",
    "@noble/hashes": "^1.7.0",
    "@pabox/types": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0",
    "rimraf": "^6.0.0"
  }
}
